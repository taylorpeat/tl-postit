<div class="row" id="paginate_group">
  <div class="span10">
    <div class="btn-group">
      <% if @page == 0 %>
        <button class="btn disabled">
          <i class="icon-chevron-left"></i>
        </button>
      <% else %>
        <%= link_to polymorphic_path(link_type, page: @page - 1), class: "btn", remote: true do %>
          <i class="icon-chevron-left"></i>
        <% end %> 
      <% end %>
      <button class="btn">Page <%= @last_page == 0 ? 0 : @page + 1 %>/<%= @last_page %></button>
      <% if @page >= @last_page - 1 %>
        <button class="btn disabled">
          <i class="icon-chevron-right"></i>
        </button>
      <% else %>
        <%= link_to polymorphic_path(link_type, page: @page + 1), class: "btn", remote: true do %>
          <i class="icon-chevron-right"></i>
        <% end %> 
      <% end %> 
    </div>
  </div>
  <br>
  <br>
</div>